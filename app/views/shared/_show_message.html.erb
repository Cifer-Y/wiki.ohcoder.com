<% @messages.each do |msg| %>
  <div class="msg-panel">
    <div class="row">
      <div class="large-11 medium-10 small-10 columns">
        <p>
          <%= msg.content %>
        </p>
      </div>
      <div class="large-1 medium-2 small-2 columns">
        <%= image_tag("fix.png", alt:"fix") %>
      </div>
    </div>
    <div class="row">
      <div class="large-5 medium-5 small-5 columns">
        <a class="link-label" href=<%=msg.site_link %> target="_blank">
          <%= msg.site_name %>
        </a>
      </div>
      <div class="large-2 large-offset-5 medium-3 small-3 columns">
        <% if current_user %>
          <%= link_to "Delete", message_path(msg),
            :method=> :delete,:class=>"delete-btn",
            :data=>{ confirm: 'Are you sure?'} %>
        <% end %>
      </div>
    </div>
  </div>
  <br>
<% end %>

