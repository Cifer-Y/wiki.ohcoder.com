<%= form_for @user do |f| %>
  <div>
    <h3>Sign up</h3>
  </div>
  <%= f.text_field :name, :placeholder => "name" %>
  <%= f.text_field :email, :placeholder => "email" %>
  <%= f.password_field :password, :placeholder => "password" %>
  <%= f.password_field :password_confirmation, :placeholder => "password_confirmation" %>
  <%= f.submit "Sign up", :class => "tiny radius button" %>
<% end %>
